<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentHouseDetailsActivity">

    <ImageView
        android:id="@+id/xyx"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/header_file" />

    <ImageView
        android:id="@+id/RentHouseBack"
        android:layout_width="52.881774902344dp"
        android:layout_height="47.303344726562dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/arrow_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/helvetica_neuemedium"
        android:gravity="center"
        android:text="House Details"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/xyx">

        <ImageView
            android:id="@+id/RentHouseDetailImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/_image_24"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/RentHouseDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RentHouseDetailImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/helvetica_neuemedium"
            android:gravity="center"
            android:text="Farm House"
            android:textColor="@color/text_gray"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RentHouseDetailCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RentHouseDetailName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="@font/helvetica_neuelight"
            android:text="Sialkot"
            android:textColor="@color/gray_medium"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/_location_on_24" />

        <TextView
            android:id="@+id/RentHouseDetailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RentHouseDetailCity"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="@font/helvetica_neuelight"
            android:text="Main GT Road,Gujranwala"
            android:textColor="@color/gray_medium"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/_location_on_24" />

        <LinearLayout
            android:id="@+id/RentHouseDetailFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RentHouseDetailAddress"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:paddingEnd="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:paddingEnd="1dp"
                android:src="@drawable/ic_bathroom_icon" />

            <TextView
                android:id="@+id/_bathroom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="@string/bathroom"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_no_of_bathrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="4"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:paddingEnd="1dp"
                android:src="@drawable/_king_bed_24" />

            <TextView
                android:id="@+id/_master_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="@string/master_room"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_no_of_masters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/helvetica_neuelight"
                android:gravity="center_vertical"
                android:text="5"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SellerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RentHouseDetailFeatures"
            android:layout_marginTop="05dp"
            android:visibility="invisible"
            android:weightSum="2">

            <TextView
                android:id="@+id/RentHouseDetailSellerNametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/helvetica_neuemedium"
                android:gravity="end"
                android:text="Owner Name:"
                android:textColor="@color/gray_medium"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RentHouseDetailSellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="05dp"
                android:layout_weight="1.5"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="Ali"
                android:textColor="@color/gray_medium"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SellerPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/SellerName"
            android:layout_marginTop="05dp"
            android:visibility="invisible"
            android:weightSum="2">

            <TextView
                android:id="@+id/RentHouseDetailSellerPhonetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/helvetica_neuemedium"
                android:gravity="end"
                android:text="Owner Phone:"
                android:textColor="@color/gray_medium"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RentHouseDetailSellerPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="03dp"
                android:layout_weight="1.5"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="03000000000"
                android:textColor="@color/gray_medium"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/RentHouseBookNow"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@id/SellerPhone"
            android:layout_marginStart="90dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/tutorial_btn"
            android:backgroundTint="@color/new_red"
            android:gravity="center"
            android:text="Book Now..!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>