<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/xyx"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/header_file"/>

        <ImageView
            android:id="@+id/SaleHouseBack"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:layout_width="52.881774902344dp"
            android:layout_height="47.303344726562dp"
            android:background="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/helvetica_neuemedium"
            android:gravity="center"
            android:text="Event Details"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/event_detail_image"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/xyx"
            android:layout_alignParentEnd="true"
            android:background="@drawable/_image_24"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/event_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_detail_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:fontFamily="@font/helvetica_neuemedium"
            android:text="Qawali Night"
            android:textColor="@color/text_gray"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Event_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_detail_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="@font/leelawad"
            android:text="Sialkot"
            android:textColor="@color/gray_medium"
            android:textSize="19sp"
            app:drawableStartCompat="@drawable/_location_on_24" />


        <LinearLayout
            android:id="@+id/_linear_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Event_detail_location"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingEnd="5dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:paddingEnd="1dp"
                android:src="@drawable/_calendar_today_24" />

            <TextView
                android:id="@+id/_Date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="@string/date"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Event_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="4/2/2024"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:paddingEnd="1dp"
                android:src="@drawable/_access_time_24" />

            <TextView
                android:id="@+id/Event_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="@string/time"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Event_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/helvetica_neuelight"
                android:gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:text="5:00 Pm"
                android:textSize="18sp" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>