<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpAcivity">

    <RelativeLayout
        android:id="@+id/_booking_relative_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_file"
        >

        <ImageView
            android:id="@+id/_help_back_button"
            android:background="@drawable/arrow_back"
            android:layout_marginStart="16.000122070312dp"
            android:layout_marginTop="47.462707519531dp"
            android:layout_width="56.881774902344dp"
            android:layout_height="45.303344726562dp" />

        <TextView
            android:id="@+id/_booking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/helvetica_neuemedium"
            android:gravity="center"
            android:text="Help"
            android:textColor="@color/light_white"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/_linear_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/_booking_relative_one"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:fontFamily="@font/helvetica_neuemedium"
            android:text="Phone: "
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/phone"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/helvetica_neuemedium"
            android:text="+92 300 1234567"
            android:textSize="18sp" />

        <View
            android:id="@+id/line_11_account"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_below="@id/phone_number"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="#797979" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/_linear_card_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/_linear_card_view"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/helvetica_neuemedium"
            android:text="Email: "
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/email"
            android:fontFamily="@font/helvetica_neuemedium"
            android:text="RentHouse@gmail.com"
            android:textSize="18sp" />

        <View
            android:id="@+id/line_111_account"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_below="@id/emailtxt"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="#797979" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/_linear_card_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/_linear_card_view2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/addres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/helvetica_neuemedium"
            android:text="Visit Us: "
            android:textColor="@color/gray"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addresss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/addres"
            android:fontFamily="@font/helvetica_neuemedium"
            android:text="Blue Area F11, Islamabad, Pakistan"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>