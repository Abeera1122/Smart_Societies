<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PollFragment">

    <RelativeLayout
        android:id="@+id/_booking_relative_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_file">

        <ImageView
            android:id="@+id/_Poll_back_button"
            android:layout_width="56.881774902344dp"
            android:layout_height="49.303344726562dp"
            android:layout_marginStart="16.000122070312dp"
            android:layout_marginTop="39.462707519531dp"
            android:background="@drawable/arrow_back" />

        <TextView
            android:id="@+id/_booking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/helvetica_neuemedium"
            android:gravity="center"
            android:text="Polls"
            android:textColor="@color/light_white"
            android:textSize="28sp"
            android:textStyle="bold" />

    </RelativeLayout>


   <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:visibility="gone"
       android:id="@+id/ll"
       android:orientation="vertical">
       <TextView
           android:id="@+id/QuestionTxt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/_booking_relative_one"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="16dp"
           android:layout_marginTop="90sp"
           android:layout_marginEnd="16dp"
           android:fontFamily="@font/helvetica_neuemedium"
           android:gravity="center"
           android:text="New Question...!"
           android:textColor="@color/black"
           android:textSize="24sp" />

       <TextView
           android:id="@+id/Poll_Question"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/QuestionTxt"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="16dp"
           android:layout_marginTop="20sp"
           android:layout_marginEnd="16dp"
           android:fontFamily="@font/helvetica_neuelight"
           android:gravity="start"
           android:text="Your Opinion will be very Helpful for us. We are looking forwrd to you. "
           android:textSize="22sp"
           android:textStyle="bold" />

       <RadioGroup
           android:id="@+id/group"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/Poll_Question">

           <RadioButton
               android:id="@+id/PollAnswer1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginTop="20dp"
               android:layout_marginEnd="16dp"
               android:fontFamily="@font/helvetica_neuemedium"
               android:text="Pakistan"
               android:textSize="23sp" />

           <RadioButton
               android:id="@+id/PollAnswer2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/PollAnswer1"
               android:layout_marginStart="16dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="16dp"
               android:fontFamily="@font/helvetica_neuemedium"
               android:text="Turkey"
               android:textSize="23sp" />
       </RadioGroup>

       <Button
           android:id="@+id/PollSubmitButton"
           android:layout_width="match_parent"
           android:layout_height="43dp"
           android:layout_below="@id/group"
           android:layout_marginStart="90dp"
           android:layout_marginTop="44dp"
           android:layout_marginEnd="90dp"
           android:background="@drawable/tutorial_btn"
           android:backgroundTint="@color/new_red"
           android:gravity="center"
           android:text="Submit Answer"
           android:textAllCaps="false"
           android:textColor="@color/white"
           android:textStyle="bold" />
   </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>