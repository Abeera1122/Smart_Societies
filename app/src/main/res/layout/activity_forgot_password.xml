<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/light_black"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/_forgot_password_back"
                    android:layout_width="56.881774902344dp"
                    android:layout_height="50.303344726562dp"
                    android:layout_marginStart="16.000122070312dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/arrow_back" />

                <ImageView
                    android:id="@+id/bg_forgot_password"
                    android:layout_width="327dp"
                    android:layout_height="420.51739501953dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="140.48266601562dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/white_edits" />

                <TextView
                    android:id="@+id/_forgot_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="200.48260498047dp"
                    android:fontFamily="@font/helvetica_neuemedium"
                    android:gravity="center"
                    android:text="@string/forgot_password"
                    android:textColor="@color/light_black"
                    android:textSize="27sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_enter_email_to_return_your_account"
                    android:fontFamily="@font/montserrat"
                    android:alpha="0.5"
                    android:textColor="@color/light_black"
                    android:layout_below="@id/_forgot_password_text"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="@string/enter_your_email_to_return_your_account"
                    android:textSize="12dp"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/_text_input_forget_password_email"
                    android:layout_height="60dp"
                    android:layout_width="270dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:maxWidth="270dp"
                    app:startIconDrawable="@drawable/_sign_up_mail_24"
                    app:startIconTint="@color/light_red"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_below="@id/_enter_email_to_return_your_account">

                    <EditText
                        android:id="@+id/_forgot_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:background="@drawable/phone_number_background"
                        android:hint=" Type your mail here"
                        android:paddingStart="5dp"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/_forgot_password_next_button"
                    android:layout_width="match_parent"
                    android:layout_height="44.00006103516dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="90dp"
                    android:layout_marginTop="70dp"
                    android:layout_below="@id/_text_input_forget_password_email"
                    android:background="@drawable/tutorial_btn"
                    android:text="Send"
                    android:textColor="@color/light_white"
                    android:textSize="21sp"
                    android:gravity="center"
                    />

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>