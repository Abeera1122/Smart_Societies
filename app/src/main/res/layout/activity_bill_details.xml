<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillDetailsActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/xyx"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/header_file"/>

        <ImageView
            android:id="@+id/SaleHouseBack"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:layout_width="52.881774902344dp"
            android:layout_height="47.303344726562dp"
            android:background="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/helvetica_neuemedium"
            android:gravity="center"
            android:text="Bill Details"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Bill_Detail_image"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@id/xyx"
            android:background="@drawable/_image_24"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/Bill_linear_1"
            android:layout_marginTop="5dp"
            android:layout_below="@id/Bill_Detail_image">

            <TextView
                android:id="@+id/Bill_Deadline_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="Deadline:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Bill_Detail_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/helvetica_neuelight"
                android:text="10/12/2024"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/BillPayBtn"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_below="@id/Bill_linear_1"
            android:background="@drawable/tutorial_btn"
            android:backgroundTint="@color/new_red"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="Pay Now..!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>