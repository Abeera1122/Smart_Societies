<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComplaintsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/_profile_update_relative_one"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@drawable/header_file">

                    <ImageView
                        android:id="@+id/Complaint_BackButton"
                        android:layout_width="56.881713867188dp"
                        android:layout_height="45.303344726562dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="45dp"
                        android:background="@drawable/arrow_back" />

                    <TextView
                        android:id="@+id/_contacts_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="-2dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="Complaints"
                        android:textColor="@color/light_white"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/_card_view_contact_us"
                    android:layout_width="356dp"
                    android:layout_height="395dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginEnd="13dp"
                    app:cardCornerRadius="25dp">

                    <EditText
                        android:id="@+id/_your_name_contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/contact_us_edittext_background"
                        android:hint="Your Name"
                        android:paddingStart="10dp"
                        android:padding="7dp" />

                    <EditText
                        android:id="@+id/_your_phone_number_contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="81dp"
                        android:layout_marginEnd="20dp"
                        android:paddingStart="10dp"
                        android:background="@drawable/contact_us_edittext_background"
                        android:hint="Your Phone"
                        android:padding="7dp" />

                    <EditText
                        android:id="@+id/_your_mail_contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="128dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/contact_us_edittext_background"
                        android:hint="Your Email"
                        android:inputType="textEmailAddress"
                        android:padding="7dp" />

                    <EditText
                        android:id="@+id/Complaint_Subject"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="175dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/contact_us_edittext_background"
                        android:hint="Complaint Subject"
                        android:inputType="textEmailAddress"
                        android:padding="7dp" />

                    <EditText
                        android:id="@+id/_your_message_contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:textSize="15sp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="223dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/contact_us_edittext_background"
                        android:hint="Your Complaint"
                        android:gravity="start"
                        android:padding="7dp"
                        tools:targetApi="p" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/RentHouseBookNow"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_below="@id/_card_view_contact_us"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="90dp"
                    android:background="@drawable/tutorial_btn"
                    android:backgroundTint="@color/new_red"
                    android:gravity="center"
                    android:text="Send Complaint"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>