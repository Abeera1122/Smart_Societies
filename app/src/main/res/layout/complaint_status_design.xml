<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ComplaintStatus_cardView"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginStart="02dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="02dp"
    android:layout_marginBottom="02dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Complaint_Status_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="@font/leelawad"
            android:text="Complaint Subject"
            android:textColor="@color/text_gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/_linear_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Complaint_Status_subject"
            android:layout_alignParentStart="true"

            android:layout_marginTop="6dp"

            android:orientation="horizontal"
            android:paddingEnd="5dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/Complaint_no_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:fontFamily="@font/helvetica_neuemedium"
                android:gravity="end"
                android:text="Complaint no. :"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/complaint_Status_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/helvetica_neuemedium"
                android:text="4"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/_linear_card_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/_linear_card_view"
            android:layout_alignParentStart="true"

            android:layout_marginTop="6dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:paddingEnd="5dp"
            android:weightSum="4">


            <TextView
                android:layout_marginStart="13dp"

                android:id="@+id/complaint_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:fontFamily="@font/helvetica_neuemedium"
                android:gravity="end"
                android:text="Status:"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Complaint_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/helvetica_neuemedium"
                android:gravity="start"
                android:text="Pending"
                android:textSize="12sp" />


        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>